<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_pleaseSetNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/noto_bold"
        android:text="닉네임을 설정해주세요"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="289dp"
        android:layout_height="50dp"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pleaseSetNickname"
        android:layout_marginStart="32dp"
        android:inputType="textPersonName"
        android:text="최대 8글자로 입력해주세요."
        android:textSize="12sp"
        android:textColor="#767676"
        android:fontFamily="@font/noto_regular"
        android:background="@drawable/et_rounded_rectangle" />

    <TextView
        android:id="@+id/tv_nicknameNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nickname"
        android:fontFamily="@font/noto_regular"
        android:text="이미 존재하는 닉네임입니다."
        android:textSize="10sp"
        android:visibility="invisible"
        android:textColor= "#FF4E43"/>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/bg_bt_start"
        android:fontFamily="@font/noto_bold"
        android:text="시작하기"
        android:textSize="15sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>