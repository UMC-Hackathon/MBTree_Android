<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000"
   >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/letter_basketball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>


    <ImageView
            android:id="@+id/letter_basketball"
            android:layout_width="333dp"
            android:layout_height="483dp"
            android:background="@drawable/letter_basketball"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintVertical_bias="0.834" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btcancel"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginBottom="484dp"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/letter_basketball"
            app:layout_constraintTop_toTopOf="@+id/letter_basketball" />

    <EditText
            android:id="@+id/letter_content"
            android:layout_width="289dp"
            android:layout_height="404dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="예시입니다"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/letter_basketball"
            app:layout_constraintHorizontal_bias="0.573" />

</androidx.constraintlayout.widget.ConstraintLayout>